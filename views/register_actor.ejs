  <% include partials/head %>
  <!-- Content Wrapper. Contains page content-->
  <div class="content-wrapper">
    <!-- Content Header (Page header)-->
    <section class="content-header">
      <h1>Acteurs<small>Création</small></h1>
      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Acteurs</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div id="result"></div>
      <!-- Default box -->
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title">Ajout d'un acteur</h3>

          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                    title="Collapse">
              <i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
              <i class="fa fa-times"></i></button>
          </div>
        </div>
        <div class="box-body">
          <form role="form">

            <div class="form-group">
              <label>Identifiant</label>
              <input type="text" id="id" class="form-control">
            </div>
            <div class="form-group">
              <label>Nom</label>
              <input type="text" id="name" class="form-control">
            </div>

            <div class="pull-right">
                <button type="button" class="btn btn-primary" id="add_button">Ajouter</button>
            </div>

          </form>
        </div>
      </div>
      <!-- /.box -->

    </section>
    <!-- /.content -->

  </div>

<% include partials/foot %>

<script>
  //Submit data when enter key is pressed
  $('#add_button').on('click', function(e) {
    var name = $('#name').val();
    var id = $('#id').val();
    $.ajax({
        method: "POST",
        url: "/register_actor",
        contentType: "application/json",
        data: JSON.stringify({name: name,
                              id: id})
      }).done(function(data) {
          console.log(data);
          var res = '<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a><strong>Félicitation!</strong>'+data;
          $("#result").html(res);
          $("#result").addClass("alert alert-success alert-dismissable");
          window.location.replace("/display_actor");
      });
    });
</script>
